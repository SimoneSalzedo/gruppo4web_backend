<!DOCTYPE>
<html lang="en">
<head><title>Order Status</title></head>
<link rel="stylesheet" type="text/css" href="/orderStatus.css">
<body>
<div class="orderContainer">
    <h2>Here is your order:</h2>
    <p>Remain in this page to see when your order is ready</p><br>
    <p>Your order is composed of: <p>
    <ul><%savedOrder.itemNameArray.forEach(item => { %>
        <li><%=item%><%})%></li>
    </ul>
    <p id="status"> The status of your order is <%=savedOrder.status%></p>
    <p id="statusinfo">
    <div id="loader"></div>
</div>
</body>
<script>
    const eventSource = new EventSource(`http://localhost:3001/chef/chefstream/<%=savedOrder._id%>`, { withCredentials: true })
    eventSource.onmessage = (e) => {
        console.log(e.data)
        //data contains the updated status of the order
        if(e.data==='pending'){
            document.getElementById('statusinfo').textContent = `A chef will take your order ASAP`
        }else if(e.data==='processing'){
            document.getElementById('statusinfo').textContent = `Your order is being elaborated by our chefs`
            document.getElementById('loader').setAttribute('style', 'position: absolute; left: 50%; top: 50%; z-index: 1; width: 300px; height: 300px; margin: -76px 0 0 -76px; border: 16px solid #f3f3f3; border-radius: 50%; border-top: 16px solid #ffa51e; animation: spin 2s linear infinite;')
        }else if(e.data==='ready'){
            document.getElementById('statusinfo').textContent = `You can go retrieve your order!!`
        }
        window.location.href = "http://localhost:3001/user/orderStatus/<%=savedOrder._id%>"
    }

</script>
</html>